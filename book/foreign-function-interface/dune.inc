(rule
 (target findlib.conf)
 (action (write-file %{target} "")))

(alias
 (name   runtest)
 (deps   (:x README.md)
         (:conf findlib.conf)
         (package mdx)
         (package core)
         (package ctypes)
         (package ctypes-foreign)
         (package ppx_jane)
         (:y8 ../../examples/code/ctypes/ctypes.mli)
         (:y7 ../../examples/code/ctypes/ctypes_impl.ml)
         (:y6 ../../examples/code/ffi/datetime/datetime.ml)
         (:y5 ../../examples/code/ffi/hello/hello.ml)
         (:y4 ../../examples/code/ffi/ncurses/ncurses.ml)
         (:y3 ../../examples/code/ffi/ncurses/ncurses.mli)
         (:y2 ../../examples/code/ffi/qsort/qsort.ml)
         (:y1 ../../examples/code/ffi/qsort/qsort.mli)
         (:y0 ../../examples/code/ffi/return_frag.ml)
         (source_tree ../../examples/code/ffi/datetime)
         (source_tree ../../examples/code/ffi/hello)
         (source_tree ../../examples/code/ffi/ncurses)
         (source_tree ../../examples/code/ffi/qsort)
         prelude.ml)
 (locks ../../global-lock)
 (action (progn
           (setenv OCAMLFIND_CONF %{conf} (run ocaml-mdx test --prelude=prelude.ml --direction=to-ml %{x}))
           (diff? %{y8} %{y8}.corrected)
           (diff? %{y7} %{y7}.corrected)
           (diff? %{y6} %{y6}.corrected)
           (diff? %{y5} %{y5}.corrected)
           (diff? %{y4} %{y4}.corrected)
           (diff? %{y3} %{y3}.corrected)
           (diff? %{y2} %{y2}.corrected)
           (diff? %{y1} %{y1}.corrected)
           (diff? %{y0} %{y0}.corrected)
           (diff? %{x} %{x}.corrected))))
